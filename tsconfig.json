{
    "compilerOptions": {
      "target": "es2021",                          
      "module": "commonjs",                    
      "lib": ["es2021"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
    },
    "include": [
      "./src/**/*",
      "src/**/*.json"
    ],
  }